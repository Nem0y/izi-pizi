 #include <iostream>
  using namespace std;
  int main() {
    string slovo;
    cout << "Введите слово: ";
    string probel;
    getline (cin, slovo);
    for (char c : slovo){
      if (c == ' '){
        probel += '_';
      }else{
        probel += c;
      }
      cout << "Строка с заменой пробелов: " << probel << endl;
    }}

